<div class="vote">
  <h1><%= @item_group.description %></h1>

  <div class="items clearfix">
    <%= render :partial => @item1 %>
    <%= render :partial => @item2 %>
  </div>

  <% unless @vote.completed? %>
    <a class="vote_action skip" href="<%= vote_on_item_path(group_key: @current_vote.group_key, item1: @item1.id, item2: @item2.id, choose: 'skip') %>">&mdash; SKIP &rarr;<div class="overlay"></div></a>
  <% end %>
  <% if @vote.skipped? %>
    Skipped!
  <% end %>
</div>

<div class="actions" style="clear:both; margin-top: 60px;">
    <a href="<%= new_item_path(group_key:@item_group.key) %>" class="action-button clickable">Submit Your Own Answer</a>
    <a href="<%= new_item_group_path %>" class="action-button clickable">Ask Your Own Question</a>
</div>
